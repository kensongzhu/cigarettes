root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 119
trim_trailing_whitespace = true

[*.json]
indent_size = 2
indent_style = space

[.*rc]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

